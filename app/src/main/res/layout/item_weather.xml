<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:clickable="true"
    android:orientation="vertical">
    <!--// date  图标  多云(type)   风向(fengxiang) 风力(fengli)   高温(high)  低温(low)-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/weather_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28日星期三" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weather_typeimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/weather_type_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云" />

            <TextView
                android:id="@+id/weather_fengxiang_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东风" />

            <TextView
                android:id="@+id/weather_fengli_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-4级" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weather_low_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16℃" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/weather_high_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26℃" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/weather_line_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0" />
</LinearLayout>